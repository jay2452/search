<h1>Search Results</h1>
<p><%= link_to 'Back', new_search1_path %></p>

<% if @search1.search_books.empty? %>
	<p>No Records found</p>
<% else%>
	<% @search1.search_books.each do |c| %>
		<br>
		<div class="div">
			<h1><%= c.name %></h1>
			<p>Price: $<%= c.price %></p>
			<p>Category: <%= c.category %></p>
			<p>ISBN: <%= c.isbn %></p>
		</div>
	<% end -%>
<% end -%>